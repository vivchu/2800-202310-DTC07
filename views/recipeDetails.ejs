<%- include("templates/header") %>
<div class="container">
    <div class="row">
        <div class="col-12 col-md-6">
            <h2><%=recipe.Name  %></h2>

            <img src="<%= recipe.Image_Link %>" alt="{{ recipe.Name }}" class="img-fluid">
            
        </div>
        <div class="col-12 col-md-6">
            <h3>Ingredients</h3>
            <ul>
                <li><%=recipe.RecipeIngredientParts%></li>
            </ul>

            <h3>Instructions</h3>
            <ol>
                <li><%=recipe.RecipeInstructions%></li>

            </ol>

            <div class="row flex-row justify-content-around">
                <div class="col-6 col-md-4 text-center">
                    
                    <button  class="btn" id="favoritebtn" data-recipe-id="<%= recipe._id %>"> <i class="fas fa-heart"></i></button>
                    
                </div>
                <div class="col-6 col-md-4 text-center">
                    <form method="get" action="/customizeRecipe">
                    <button id="customizeBtn" class="btn" >Customize</button>
                    </form>
                    <br>
                    <br>
