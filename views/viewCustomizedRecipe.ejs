<%- include("templates/header") %>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="container">
    <div class="row">
        <div class="col-12 col-md-6">
            <h2><%= recipe[0] %></h2>
            <img src="/images/logo.png" alt="<%= recipe[0] %>" class="img-fluid">   
        </div>
        <div class="col-12 col-md-6">
            <h3>Ingredients</h3>
            <ul>
                <% recipe[1].forEach(ingredient => { %>
                    <li><%= ingredient %></li>
                <% }); %>
            </ul>

            <h3>Instructions</h3>
            <ul>
                <% recipe[2].forEach(instruction => { %>
                    <li><%= instruction %></li>
                <% }); %>
            </ul>
        </div>
    </div>
</div><br><br>


<%- include("templates/footer") %>