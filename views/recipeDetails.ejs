<%- include("templates/header") %>
<div class="container">
    <div class="row">
        <div class="col-12 col-md-6">
            <h1><%=recipe.Name  %></h1>
            <h4>Recipe Description</h4>
            <img src="<%= recipe.Image_Link %>" alt="{{ recipe.Name }}">
        </div>
        <div class="col-12 col-md-6">
            <h2>Ingredients</h2>
            <ul>
                <li><%=recipe.RecipeIngredientParts%></li>
            </ul>

            <h2>Instructions</h2>
            <ol>
                <li><%=recipe.RecipeInstructions%></li>
            </ol>

            <div class="row flex-row justify-content-around">
                <div class="col-6 col-md-4 text-center">
                    <a href="/favorite" class="text-black"><i class="fas fa-heart"></i></a>
                </div>
                <div class="col-6 col-md-4 text-center">
                    <button class="btn" style="color:#468414;border-color: #468414;background-color: white; width: 70%;">Cook</button>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("templates/footer") %>
