<%- include("templates/header") %> 
  <style>
    .form-control {
      border-color: #468414;
      font-family: Arial, sans-serif;
      
    }
    body {
     color: #468414;
     ;
    }
    .btn {
      background-color: #468414;
      color: white;
      margin-top: 20px;
    }
    h2 {
      color: #68cf14;
      margin-bottom: 20px;
    }
  </style>

  <div class="container">
    <h2>Sign Up</h2>
    <form action='/submitUser' method='post'>
      <div class="form-group">
        <label for="username">Name:</label>
        <input name='username' type='text' class="form-control" id="username" placeholder='Enter name'>
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input name='email' type='text' class="form-control" id="email" placeholder='Enter email'>
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input name='password' type='password' class="form-control" id="password" placeholder='Enter password'>
      </div>
        <div class="form-group">
          <label for="secretQuestion">Select a secret question:</label>
          <select name='secretQuestion' class="form-control" id="secretQuestion">
            <option value="" selected>Select a secret question</option>
            <option value="What is your mother' s maiden name?">What is your mother's maiden name?</option>
            <option value='What was the name of your first pet?'>What was the name of your first pet?</option>
            <option value='What is your favorite color?'>What is your favorite color?</option>
          </select>
        </div>
      <div class="form-group">
        <label for="secretAnswer">Answer to secret question:</label>
        <input name='secretAnswer' type='text' class="form-control" id="secretAnswer" placeholder='Enter answer'>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <%= errorMessage %>
  </div>
  <%- include("templates/footer") %>
