<%- include("templates/header") %> 

<div class="container">
  <div class="row">
    <% favoritedRecipes.forEach((recipe, index) => { %>
      <div class="col-md-4 mb-3">
        <div class="card">
          <img src="<%= recipe.Image_Link %>" alt="<%= recipe.Name %>" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title"><%= recipe.Name %></h5>
            <a href="/recipes/<%= recipe._id %>" class="btn btn-primary">View Recipe</a>
          </div>
        </div>
      </div>
      <% if ((index + 1) % 3 === 0) { %>
        </div>
        <div class="row">
      <% } %>
    <% }); %>
  </div>
</div>




<%- include("templates/footer") %> 