<%- include("templates/header") %>
<style>
  body {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
  }

.tooltip-btn {
    position: relative;
    margin-left: 5px;
  }

  .tooltip-btn i {
    font-size: 16px;
    color: #999;
    cursor: pointer;
    margin-left: 5px;
  }

  .tooltip-text {
  position: absolute;
  width: 180px;
  background-color: #333;
  color: #fff;
  padding: 8px;
  border-radius: 4px;
  text-align: center;
  visibility: hidden;
  transition: opacity 0.3s;
  bottom: 100%;
  left:-50px;
  transform: translateX(-50%);
  margin-bottom: 8px;
  opacity: 0.5;
}


  .show {
    visibility: visible;
    opacity: 1;
  }

.form-group {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 10px;
  margin-bottom: 20px;
}

.smaller-button {
  font-size: 16px;
  padding: 12px 24px;
  width: 300px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  }

</style>
