<%- include("templates/header") %>

<div class="container">
    <div class="row">
        <% foundRecipes.forEach((recipe, index)=> { %>
                <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <img src="images/meal.jpg" alt="<%= recipe.Name %>" height="100px">
                        <h5 class="card-title">
                            <%= recipe.Name %>
                        </h5>
                        <a href="/recipes/<%= recipe._id %>" class="btn btn-primary">View Recipe</a>
                    </div>
                </div>
            </div>
            <% if ((index + 1) % 3===0) { %>
    </div>
    <div class="row">
        <% } %>
            <% }); %>
    </div>
</div>



<%- include("templates/footer") %>